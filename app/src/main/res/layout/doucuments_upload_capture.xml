                <!--<com.application.innove.obex.Utilityclass.TypefacedTextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight=".1"-->
                <!--android:gravity="center|left"-->
                <!--android:paddingLeft="10dp"-->
