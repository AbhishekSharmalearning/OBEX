<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EEEEEE"
              android:orientation="vertical"
              android:weightSum="10"
              tools:context=".ObexActivities.imagecaptureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DF2066"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvMedInName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".95"
            android:background="#DF2066"
            android:gravity="center|left"
            android:paddingLeft="13dp"
            android:text="MedsApp"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/uploadprescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".05"
            android:background="@drawable/camera"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="#DEEEED"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight=".6"
            android:gravity="center"
            android:text="UPLOAD PRESCRIPTION"
            android:textColor="#020202"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight=".15"
            android:gravity="center"
            android:text="Take A Photograph of your Doctor's Prescription"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:id="@+id/swipe_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />


    <HorizontalScrollView
        android:id="@+id/horizntal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.4"
        android:background="#DEEEED"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:id="@+id/imagecapture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal">
        </LinearLayout>


    </HorizontalScrollView>

    <View
        android:id="@+id/swipe_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="#A0B0AF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:orientation="horizontal"
        android:weightSum="1">


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".42"
            />

        <ImageView
            android:id="@+id/Ivprescriptionimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".16"
            android:background="@drawable/camera"
            android:clickable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".42"
            />


    </LinearLayout>

</LinearLayout>
